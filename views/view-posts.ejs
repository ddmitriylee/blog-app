<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <title>View Posts</title>
</head>
<body>
    <header>
        <div class="container">
            <img src="/css/imgs/logo.png" alt="logo">
            <nav>
                <ul>
                    <li>
                        <a href="/api/blog/view-posts">Home</a>
                    </li>
                    <li>
                        <a href="/api/blog/create-post">Publish</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <main>
        <div class="container">
            <% posts.forEach(post => { %>
                <div class="preview-container">
                    <div class="preview-left">
                        <p class="preview-author">By <%= post.author %></p>
                        <h2 class="preview-title"><%= post.title %></h2>
                        <p class="preview-date"><%=post.createdAt.toString().split(" ").slice(1, 3)%></p>
                        <div class="preview-buttons">
                            <a class="preview-link" href="/api/blog/view-post/<%= post._id %>">View Post</a>
                            <div class="edit-buttons">
                                <form action="/api/blog/delete-post/<%= post._id %>" method="POST">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button class="delete-button" type="submit" onclick="return confirm('Are you sure?')">Delete Post</button>
                                </form>
                                <a class="change-button" href="/api/blog/edit-post/<%= post._id %>">Change Post</a>
                            </div>
                        </div>
                    </div>
                    <div class="preview-right">
                        <img class="preview-img" src="<%=post.image%>" alt="image">
                    </div>
                </div>
            <% }); %>
        </div>
    </main>
</body>
</html>